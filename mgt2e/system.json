{
  "id": "mgt2e",
  "title": "Mongoose Traveller 2e",
  "description": "A system for Mongoose Traveller 2e. This includes rules specific to this version of Traveller.",
  "version": "0.15.8.0",
  "compatibility": {
    "minimum": 12,
    "verified": 13,
    "maximum": 13
  },
  "authors": [
    {
      "name": "Samuel Penn",
      "url": "https://www.notasnark.net/",
      "email": "sam@notasnark.net",
      "discord": "notasnark"
    }
  ],
  "esmodules": ["module/mgt2.mjs" ],
  "styles": ["css/mgt2.css", "css/history.css", "css/items.css", "css/journals.css", "css/software.css", "css/world.css" ],
  "background": "systems/mgt2e/images/traveller.webp",
  "scripts": [ ],
  "packs": [
    {
      "name": "base-items",
      "label": "MgT2e Base Items",
      "system": "mgt2e",
      "module": "mgt2e",
      "path": "packs/base-items",
      "type": "Item"
    },
    {
      "name": "base-actors",
      "label": "MgT2e Base Actors",
      "system": "mgt2e",
      "module": "mgt2e",
      "path": "packs/base-actors",
      "type": "Actor"
    },
    {
      "name": "traveller-docs",
      "label": "MgT2e Base Docs",
      "system": "mgt2e",
      "module": "mgt2e",
      "path": "packs/traveller-docs",
      "type": "JournalEntry"
    },
    {
      "name": "base-macros",
      "label": "MgT2e Base Macros",
      "system": "mgt2e",
      "module": "mgt2e",
      "path": "packs/base-macros",
      "type": "Macro"
    },
    {
      "name": "base-tables",
      "label": "MgT2e Base Tables",
      "system": "mgt2e",
      "module": "mgt2e",
      "path": "packs/base-tables",
      "type": "RollTable"
    }
  ],
  "packFolders": [
    {
      "name": "MgT2e",
      "color": "#804040",
      "sorting": "a",
      "ownership": {
        "PLAYER": "OBSERVER"
      },
      "packs": [
        "base-items", "base-actors", "traveller-docs", "base-macros", "base-tables"
      ]
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "socket": true,
  "grid": {
    "distance": 1.5,
    "units": "m"
  },
  "primaryTokenAttribute": "hits",
  "secondaryTokenAttribute": null,
  "url": "https://github.com/Mongoose-Publishing/traveller-foundryvtt/",
  "manifest": "https://github.com/Mongoose-Publishing/traveller-foundryvtt/raw/latest/release/system.json",
  "download": "https://github.com/Mongoose-Publishing/traveller-foundryvtt/raw/v0.15.8/release/mongoose-traveller.zip",
  "license": "https://github.com/Mongoose-Publishing/traveller-foundryvtt/raw/latest/LICENSE.txt"
}
